<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:pool="http://www.mulesoft.org/schema/mule/pool"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
        http://www.mulesoft.org/schema/mule/pool http://www.mulesoft.org/schema/mule/pool/current/mule-pool.xsd">

    <pool:config name="poolConfig">
        <pool:pooling-profile maxActive="10" maxIdle="5" initialisationPolicy="INITIALISE_ALL"
                              exhaustedAction="WHEN_EXHAUSTED_FAIL" maxWait="60"/>
    </pool:config>

    <flow name="sumMultiplyAndDivide">
        <pool:sum-multiply-and-divide config-ref="poolConfig" sum1="40" sum2="10"/>
    </flow>

    <flow name="count">
        <pool:count startAt="1" endAt="100" step="1"/>
        <logger level="INFO"/>
    </flow>

    <flow name="transform">
        <pool:transform-string-to-char/>
    </flow>
</mule>
