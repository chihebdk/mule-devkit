<?xml version="1.0" encoding="UTF-8"?>

<namespace xmlns="http://www.mulesoft.org/schema/mule/tooling.attributes" xmlns:mule="http://www.mulesoft.org/schema/mule/core" prefix="transformer" url="http://www.mulesoft.org/schema/mule/transformer">
  <global-cloud-connector extends="http://www.mulesoft.org/schema/mule/transformer/abstractTransformerConnectorGeneric" image="icons/large/transformer-connector-48x32.png" localId="config" icon="icons/small/transformer-connector-24x16.png" description="Global Transformer configuration information." caption="Transformer">
    <attribute-category description="Transformer configuration properties." caption="Transformer">
      <group caption="Generic" id="transformerGenericProperties">
        <name required="true" description="Give a name to this configuration so it can be later referenced by config-ref." caption="Name" name="name"></name>
      </group>
    </attribute-category>
  </global-cloud-connector>
  <cloud-connector extends="http://www.mulesoft.org/schema/mule/transformer/abstractTransformerConnectorGeneric" image="icons/large/transformer-connector-48x32.png" localId="transformer-connector" icon="icons/small/transformer-connector-24x16.png" description="Transformer class." caption="Transformer" aliasId="org.mule.tooling.ui.modules.core.pattern.transformer">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="transformerConnectorGeneric">
        <modeSwitch description="Operation." caption="Operation" name="Transformer operations to execute"></modeSwitch>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector abstract="true" image="icons/large/transformer-connector-48x32.png" localId="abstractTransformerConnectorGeneric" icon="icons/small/transformer-connector-24x16.png" description="Interact with Transformer." caption="Abstracttransformerconnectorgeneric">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="abstractTransformerConnectorGeneric">
        <globalRef requiredType="http://www.mulesoft.org/schema/mule/transformer/config" description="Specify which configuration to use for this invocation." caption="Config Reference" name="config-ref"></globalRef>
      </group>
    </attribute-category>
  </cloud-connector>
  <transformer image="icons/large/transformer-transformer-48x32.png" localId="transformer-transformer" icon="icons/small/transformer-transformer-24x16.png" description="Transformer class." caption="Transformer" aliasId="org.mule.tooling.ui.modules.core.pattern.transformer">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="transformerConnectorGeneric">
        <modeSwitch description="Operation." caption="Operation" name="Transformer operations to execute">
          <mode modeLabel="String to char" modeId="http://www.mulesoft.org/schema/mule/transformer/string-to-char"></mode>
          <mode modeLabel="String to url" modeId="http://www.mulesoft.org/schema/mule/transformer/string-to-url"></mode>
        </modeSwitch>
      </group>
    </attribute-category>
  </transformer>
  <transformer extends="http://www.mulesoft.org/schema/mule/transformer/transformer-transformer" abstract="true" localId="abstractTransformer" description="Base transformer." caption="Base Transformer">
    <attribute-category description="Advanced settings for transformer." caption="Advanced">
      <group caption="Transformer Settings" id="abstractTransformerSettings">
        <string description="The class of the message generated by the transformer. This is used if transformers are auto-selected and to validate that the transformer returns the correct type. Note that if you need to specify an array type you need postfix the class name with '[]'. For example, if you want return a an Orange[], you set the return class to 'org.mule.tck.testmodels.fruit.Orange[]'." caption="Return Class" name="returnClass"></string>
        <boolean description="Many transformers only accept certain classes. Such transformers are never called with inappropriate input (whatever the value of this attribute). If a transformer forms part of a chain and cannot accept the current message class, this flag controls whether the remaining part of the chain is evaluated. If true, the next transformer is called. If false the chain ends, keeping the result generated up to that point." caption="Ignore Bad Input" xsdType="substitutableBoolean" name="ignoreBadInput"></boolean>
        <encoding description="String encoding used for transformer output." caption="Encoding" xsdType="string" name="encoding"></encoding>
      </group>
      <group caption="Mime Type Attributes" id="mimeTypeAttributes">
        <enum allowsCustom="true" description="The mime type of the transformer's output." caption="Mime Type" xsdType="string" name="mimeType">
          <option value="text/plain"></option>
          <option value="text/css"></option>
          <option value="text/javascript"></option>
          <option value="text/xml"></option>
          <option value="text/xhtml"></option>
          <option value="text/html"></option>
          <option value="image/jpeg"></option>
          <option value="image/gif"></option>
          <option value="image/png"></option>
          <option value="application/json"></option>
          <option value="application/pdf"></option>
          <option value="application/x-compressed"></option>
          <option value="application/zip"></option>
          <option value="multipart/x-zip"></option>
          <option value="binary/octet-stream"></option>
        </enum>
      </group>
    </attribute-category>
  </transformer>
  <global-transformer extends="http://www.mulesoft.org/schema/mule/transformer/abstractTransformer" image="icons/large/transformer-transformer-48x32.png" localId="global-transformer" icon="icons/small/transformer-transformer-24x16.png" description="Global transformer." caption="Transformer">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="transformerConnectorGeneric">
        <modeSwitch description="Operation." caption="Operation" name="Transformer operations to execute">
          <mode modeLabel="String to char" modeId="http://www.mulesoft.org/schema/mule/transformer/string-to-char"></mode>
          <mode modeLabel="String to url" modeId="http://www.mulesoft.org/schema/mule/transformer/string-to-url"></mode>
        </modeSwitch>
      </group>
    </attribute-category>
  </global-transformer>
  <transformer extends="http://www.mulesoft.org/schema/mule/transformer/abstractTransformer" abstract="true" image="icons/large/transformer-transformer-48x32.png" localId="string-to-char" icon="icons/small/transformer-transformer-24x16.png" description="Transforms a String to a character." caption="String To Char"></transformer>
  <global-transformer extends="http://www.mulesoft.org/schema/mule/transformer/string-to-char" abstract="true" image="icons/large/transformer-transformer-48x32.png" localId="string-to-char" icon="icons/small/transformer-transformer-24x16.png" description="Transforms a String to a character." caption="String To Char">
    <attribute-category description="General." caption="General">
        <group caption="Generic">
        <name required="true" description="Identifies the transformer so that other elements can reference it. Required if the transformer is defined at the global level." caption="Name" name="name"></name>
      </group>
    </attribute-category>
  </global-transformer>
  <transformer extends="http://www.mulesoft.org/schema/mule/transformer/abstractTransformer" abstract="true" image="icons/large/transformer-transformer-48x32.png" localId="string-to-url" icon="icons/small/transformer-transformer-24x16.png" description="Transforms a String to a URL." caption="String To Url"></transformer>
  <global-transformer extends="http://www.mulesoft.org/schema/mule/transformer/string-to-url" abstract="true" image="icons/large/transformer-transformer-48x32.png" localId="string-to-url" icon="icons/small/transformer-transformer-24x16.png" description="Transforms a String to a URL." caption="String To Url">
    <attribute-category description="General." caption="General">
        <group caption="Generic">
        <name required="true" description="Identifies the transformer so that other elements can reference it. Required if the transformer is defined at the global level." caption="Name" name="name"></name>
      </group>
    </attribute-category>
  </global-transformer>
</namespace>